<div class="container p-0">
  {{#if posts.length}}
  {{#each posts as |post|}}
  <div class="post mb-3 mt-3 bg-secondary rounded">
    <a href="/dashboard/edit/{{id}}" class="text-light text-decoration-none">
      <input type="hidden" name="post-id" value="{{dataValues.id}}">
      <div>
        <div class="row">
          <div class="col-8 bg-black">
            <h4 class="bg-black">{{title}}</h4>
          </div>
          <div class="col-4 text-right">
            <span>{{format_date date_created}}</span>
          </div>
        </div>
      </div>
    </a>
  </div>
  {{/each}}
  {{/if}}
</div>
<div class="text-center">
  <a href="/dashboard" class="btn btn-primary newPostBtn"><i class="bi bi-plus"></i> Create Blog</a>
</div>
